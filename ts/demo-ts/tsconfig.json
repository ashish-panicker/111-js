{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    // the directory where the generated js files are written to
    "outDir": "./dist",
    // to watch for changes in the source files and trigger autocompilation
    "watch": true,
    // no null or undefined values in the code
    "strictNullChecks": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
}